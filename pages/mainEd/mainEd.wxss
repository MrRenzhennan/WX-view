/* pages/mainEd/mainEd.wxss */
.head-box {
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}

.head-box .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: url(http://img.zcool.cn/community/0117825857a100a801219c778d2554.jpg);
  background-size: 100% 100%;
}
.head-box .btn{
   width: 150rpx;
  height: 60rpx;
  border-radius: 60rpx;
  border: 1px solid #9b1d32;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9b1d32;
  font-size: 32rpx;
}
.head-box .right {
  width: 20rpx;
  height: 35rpx;
}

.head-box text {
  font-size: 32rpx;
}

.list {
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
}

.list image {
  width: 20rpx;
  height: 35rpx;
}
.logout text{
  color: #9b1d32;
}