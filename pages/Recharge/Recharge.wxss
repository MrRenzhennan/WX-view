/* pages/Recharge/Recharge.wxss */
page{
  background: #ffffff;
}
.divider{
  background: #f7f7f7;
}
.top-list{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #ffffff;
  font-size: 32rpx;
}
.top-list .icon{
  font-size: 28rpx;
  margin: 10rpx 0rpx 0 20rpx;
}
.top-list .col{
  color: #9b1d32;
}
.tit{
  width: 100%;
  height: 115rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 32rpx;
}
.recharge-box{
  width: 100%;
  height: 115rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.recharge-box .recharge-box-active{
  background: #c98a94;
}
.recharge-box view{
  width: 330rpx;
  height: 152rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 25rpx;
  background: #f7f7f7;
  margin-bottom: 20rpx;
  color: #000;
  font-size: 32rpx;
  font-weight: 600;
}
.offer{
  font-size: 28rpx;
  color: #9b1d32;
  margin-top: 10rpx;
}
.bottom{
  position: fixed;
  bottom: 0px;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.bottom .btn{
  width: 100%;
  height: 90rpx;
  background: #9b1d32;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ffffff;
  border-radius: 15rpx;
}
.bottom .ct{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #888;
  border-radius: 15rpx;
}
.bottom .col{
  color: #9b1d32;
}