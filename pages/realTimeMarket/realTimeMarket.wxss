/* pages/realTimeMarket/realTimeMarket.wxss */

.input-box {
  width: 100%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
}

.input-box input {
  width: 100%;
  height: 60rpx;
  border: 1px solid #ccc;
  font-size: 24rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  color: #ccc;
  background: #fff;
}
.input-box button{
  position: absolute;
  top: 30rpx;
  right: 20rpx;
  width: 100rpx;
  height: 60rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 60rpx;
  color: #ccc;
  z-index: 100;
}

.block-box {
  width: 100%;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.block-box .exponent {
  width: 200rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  font-size: 22rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}
.block-box .exponent text{
  margin-top: 10rpx;
}
.block-box .exponent .num{
  font-size: 30rpx;
}
.block-box .exponent .btm{
  font-size: 20rpx;
  width: 80%;
  display: flex;
  justify-content: space-between
}

.block-box .up {
  background: red;
}

.block-box .down {
  background: green;
}

.block-box .stop {
  background: gray;
}

.table-title {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #333;
  background: #fff;
  border-bottom: 1px solid #dfdfdf;
}

.table-title view {
  height: 70rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.t1 {
  flex: 2;
  padding-left: 100rpx;
}

.t2 {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  padding-right: 50rpx;
}

.t3 {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  padding-right: 50rpx;
}

.table-list {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0 0 0;
  background: #fff;
  background: #fff;
}

.table-list .icon {
  width: 30rpx;
  height: 25rpx;
  background: red;
  font-size: 22rpx;
  text-align: center;
  line-height: 23rpx;
  color: #fff;
  border-radius: 5rpx;
  margin-top: 8rpx;
}

.table-list .center {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #dfdfdf;
  padding-bottom: 15rpx;
}

.type {
  display: flex;
  flex-direction: column;
  flex: 2;
  box-sizing: border-box;
  padding-left: 10rpx;
}

.trend {
  flex: 1;
  font-size: 28rpx;
  display: flex;
  justify-content: flex-end;
  padding-right: 50rpx;
}

.type .chinese {
  font-size: 28rpx;
  color: #000;
}

.type .english {
  font-size: 22rpx;
  color: #999;
  font-weight: 400;
  margin-top: 8rpx;
}

.table-list .center .up {
  color: red;
}

.table-list .center .down {
  color: green;
}

.table-list .center .stop {
  color: gray;
}

.ups-and-downs {
  flex: 1;
  font-size: 28rpx;
  color: #fff;
  padding-right: 10rpx;
}

.ups-and-downs view {
  padding: 10rpx 0;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ups-and-downs .ups-up {
  background: red;
}

.ups-and-downs .ups-down {
  background: green;
}

.ups-and-downs .ups-stop {
  background: gray;
}
