/* pages/confirmOrder/confirmOrder.wxss */

.list {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 32rpx;
}

.list .icon {
  font-size: 28rpx;
  color: #9b1d32;
  margin: 10rpx 0rpx 0 20rpx;
}

.list .num {
  font-size: 38rpx;
  color: #9b1d32;
}
.list .right{
  display: flex;
  align-items: center;
}
.list .right text{
  margin-right: 20rpx;
  color: #e1e1e1;
  font-size: 32rpx;
}
.list .right .img {
  width: 20rpx;
  height: 35rpx;
}
.botm{
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.botm .checkbox{
  display: flex;
  align-items: flex-end;
  margin: 50rpx 0;
}

.botm .checkbox text{
  font-size: 32rpx;
}
.botm .checkbox .t1{
  color: #cccccc;
  margin-right: 10rpx;
  margin-left: 15rpx;
}
.botm .checkbox .t2{
  color: #9b1d32;
}
.brn-box{
  width: 100%;
  height: 90rpx;
  background: #9b1d32;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #ffffff;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.tx{
  color: #cccccc;
  margin-top: 50rpx;
  font-size: 32rpx;
  line-height: 60rpx;
}
.tx text{
  color: #9b1d32
}

